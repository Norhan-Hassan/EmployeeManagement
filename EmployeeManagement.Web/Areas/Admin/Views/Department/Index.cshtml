@model IEnumerable<Department>

<div class="container mt-4">
    <div class="d-flex justify-content-start mb-3">
        <a class="btn btn-secondary" asp-action="Create" asp-controller="Department">
            Create New Department
        </a>
    </div>

    <div class="card shadow-lg">
        <div class="card-header">
            <h4 class="mb-0">Departments</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered mb-0">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var department in Model)
                        {
                            <tr>
                                <td>@department.Name</td>
                                <td>@Html.Raw(department.Description)</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-controller="Department" asp-route-id="@department.ID">
                                         Details
                                    </a>
                                    <a class="btn btn-sm btn-success text-white" asp-action="Edit" asp-controller="Department" asp-route-id="@department.ID">
                                        Edit
                                    </a>
                                    <a class="btn btn-sm btn-danger text-white" asp-action="Delete" asp-controller="Department" asp-route-id="@department.ID">
                                         Delete
                                    </a>
                                    
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">
                                No departments found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
