@model EmployeeDepartmentsViewModel

<div class="card mx-auto mt-5" style="max-width: 500px;">
    <div class="card-header bg-light text-dark">
        <h5 class="mb-0">Edit Employee Info</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="EditInAction">
            <input type="hidden" asp-for="applicationUser.Id"/>
            <div class="mb-3">
                <label asp-for="applicationUser.UserName" class="form-label"></label>
                <input type="text" asp-for="applicationUser.UserName" class="form-control" readonly>
                <span asp-validation-for="applicationUser.UserName" class="text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="applicationUser.Email" class="form-label"></label>
                <input type="text" asp-for="applicationUser.Email" class="form-control">
                <span asp-validation-for="applicationUser.Email" class="text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="applicationUser.DepartmentID" class="form-label"></label>
                <select asp-for="applicationUser.DepartmentID" class="form-select">
                    <option disabled selected>-- Select Option --</option>
                   
                        @foreach (var dept in Model.departments)
                        {
                            <option value="@dept.ID"> @dept.Name </option>
                        }
                    
                </select>
                
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-success">Update</button>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Employee" >Back To List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
